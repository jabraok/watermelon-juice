<div class="header">
  <span class="title row stretch">Credit Note</span>
  <div class="col info">
    <div class="col">
      <span class="row stretch infoRow">
        <span class="content noteNumber">{{model.creditNoteNumber}}</span>
      </span>
      <span class="row stretch infoRow">
        <span class="content">{{date}}</span>
      </span>
      <span class="row stretch infoRow">
        <span class="content">{{model.location.company.name}}</span>
      </span>
    </div>
  </div>
</div>

<div class="rowContainer">
  {{#each validCreditNoteItems as |cni|}}
    {{rows/cost-quantity-row
        name=cni.item.name
        unitPrice=cni.unitPrice
        quantity=cni.quantity}}
  {{/each}}

  {{rows/cost-quantity-total-row
      name="Total"
      total=total}}
</div>
