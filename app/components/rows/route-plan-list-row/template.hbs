<div class="content col stretch">
  <span class="header">
    {{#if isToday}}
      <span class="fromNow">
        Today
      </span>
      <span class="spacer">
        -
      </span>
    {{/if}}
    <span class="date">
      {{date}}
    </span>
  </span>
  {{passive/label-icon
    icon="store"
    label=(pluralize model.dropOffCount "Delivery")}}
  {{#if model.hasPickups}}
    {{passive/label-icon
      icon="swap_vertical_circle"
      label=(pluralize model.pickUpCount "Pickup")}}
  {{/if}}
</div>
<span class="row iconContainer">
  <i class="material-icons">keyboard_arrow_right</i>
</span>