<div class="content col stretch">
  <span class="header">
    {{#if isToday}}
      <span class="fromNow">
        Today
      </span>
      <span class="spacer">
        -
      </span>
    {{/if}}
    <span class="date">
      {{date}}
    </span>
  </span>

  {{passive/label-icon
    icon="flight_takeoff"
    label= (concat (minutes-to-time model.startTime) " - " (minutes-to-time model.endTime)) }}

  {{passive/label-icon
    icon="store"
    label=(concat model.dropOffCount " Deliveries")}}

  {{passive/label-icon
    icon="swap_vertical_circle"
    label=(concat model.pickUpCount " Pickups")}}

</div>
<span class="row iconContainer">
  <i class="material-icons">keyboard_arrow_right</i>
</span>
