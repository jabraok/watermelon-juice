<div class="col-4 name">{{model.name}}</div>
{{#if hasQuantity}}
  <div class="col-2">
    <div class="row">
      <div class="unitPrice currency">{{currency model.unitPrice}}</div>
      <div class="row quantityContainer center">
        <div class="x">x</div>
        <div class="quantity">{{model.quantity}}</div>
      </div>
    </div>
  </div>
{{/if}}
<div class="total col-2 right currency">{{currency model.total}}</div>
